        crossorigin="anonymous" />
  
  <!-- FontAwesome -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />

  <style>
    .container {
      width: 90%;
      max-width: 1200px;
      margin: 40px auto;
      z-index: 2;
    }

    .box {
      background-color: rgba(255, 255, 255, 0.9);
      border-radius: 8px;
      padding: 20px;
      box-shadow: 0 4px 20px rgba(0, 0, 0, 0.5);
      margin-bottom: 20px;
      margin-top: 40px;
    }

    .icon-container i {
      color: #ff4500;
    }

    .icon-container i.dimmed {
      opacity: 0.4;
    }
