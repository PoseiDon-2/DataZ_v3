<!DOCTYPE html>
<html lang="en">
    <%- include('../partials/head.ejs') %>
<body>
    <% const name= 'Season Greeting' %>
    
    <%- include('../partials/nav.ejs') %>

    <div class="blogs content">
        <img src="/natural.jpeg" width="350" height="150" alt="natural">
        <h2>All Blogs</h2>
        <% if (blogs.length>0) {  %>
            <% blogs.forEach(ablog => { %>
                <a class="single" href="/blogs/<%= ablog._id %>">
                <h3 class="title"><%= ablog.title %></h3>
                <p class="snippet"><%= ablog.snippet %></p><br>
                </a>
            <% }) %>
        <% } else { %>
            <p>There are no blogs to display ....</p>
        <% } %>
    </div>

    <%- include('../partials/footer.ejs') %>

    <script src="/js/bootstrap.min.js"></script>
</body>
</html>