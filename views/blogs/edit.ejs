<!DOCTYPE html>
<html lang="en">
    <%- include('../partials/head.ejs') %>
<body>
    <%- include('../partials/nav.ejs') %>

    <div class="edit-blog-form box container">
        <div class="blog">
            <h1 class="act_head1">Edit Blog</h1>
            <form action="/blogs/<%= blog._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <label for="title">Title:</label>
                    <input type="text" id="title" name="title" value="<%= blog.title %>">
                </div>
                <div class="form-group">
                    <label for="body">Content:</label>
                    <textarea id="content" name="content"><%= blog.content %></textarea>
                </div>
                <button type="submit">Update Blog</button>
            </form>
        </div>
    </div>
    <script src="/js/bootstrap.min.js"></script>
</body>
</html>

